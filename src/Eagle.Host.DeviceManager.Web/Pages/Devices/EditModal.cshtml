@page
@inherits Eagle.Host.DeviceManager.Web.Pages.DeviceManagerPage
@using Eagle.Host.DeviceManager.Web.Pages.Devices
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Eagle.Host.DeviceManager.Devices;
@using System.Globalization
@model EditModalModel
@{
    Layout = null;
}
<form data-ajaxForm="true" asp-page="/Devices/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Action:DeviceManager:Device:Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="Device.Number"/>

            <abp-input asp-for="Device.Name"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>